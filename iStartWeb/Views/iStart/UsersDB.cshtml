@model IEnumerable<User>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6 text-uppercase">
            <h1>User Management</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="iStart" asp-action="Create" class="btn btn-primary" style="color=pink"><i class="bi bi-plus"></i> New</a>
        </div>

    </div>
    <hr />

    @if (Model.Count() > 0)
    {
        <table id="table" class="table table-bordered table-striped">
            <thead>
                <tr>
              
                    <th>Name</th>
                    <th>Email</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var user in Model)
                {
                 
                    <tr>
                        
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td class="d-flex align-items-center justify-content-center">
                            <div class="w-75 btn-group" role="group">
                                
                                <a asp-controller="iStart" asp-action="Edit" asp-route-id="@user.Id"
                                    data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center text-uppercase text-warning pt-4">No Records to Show</h2>
                </div>
            </div>

        </div>
    }
</div>

@section Scripts{
    <script>
        $(".table").DataTable();
    </script>
}